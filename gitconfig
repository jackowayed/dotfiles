[github]
	user = jackowayed
[alias]
    st = status -sb
    ci = commit
    br = branch
    co = checkout
    df = diff
    dfc = diff --cached
    dfw = diff --word-diff
    b = branch -a -v
    msg = commit --allow-empty -m
    pl = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
    pr = "pull --rebase"
    wip = commit -nm

[core]
	editor = emacs -nw -q
	excludesfile = /Users/daniel/.gitignore
[push]
	default = current
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[user]
